@import "../../styles/_variables.pcss";
@import "../../styles/_mixins.pcss";

.container {
    text-align: center;
    padding: 24px;
    border-radius: 16px;
    max-width: 440px;
    width: 100%;
    background: $color-bg-0;
}

.title {
    @mixin typography-text-xxl;

    margin-bottom: 24px;
}

.form {
    @mixin flexbox;

    flex-direction: column;
    width: 100%;
}