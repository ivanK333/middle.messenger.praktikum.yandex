@import url("../../styles/_mixins.pcss");
@import url("../../styles/_variables.pcss");

.img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  fill: $color-palette-grey-2;
}

.avatar {
  @mixin flexbox;

  overflow: hidden;
  position: relative;
  min-width: 48px;
  min-height: 48px;
  width: 48px;
  height: 48px;
  background: $color-bg-2;
  border-radius: 50%;
}
